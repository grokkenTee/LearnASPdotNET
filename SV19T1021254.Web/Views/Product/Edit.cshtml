@model SV19T1021254.DomainModel.Product
@using SV19T1021254.BussinessLayer
@{
    ViewBag.Title = "Cập nhật mặt hàng";
    var listPhoto = CommonDataService.ListOfProductPhotos(Model.ProductID);
    var listAttrib = CommonDataService.ListOfProductAttributes(Model.ProductID);
}

<div class="box box-primary">
    <div class="box-header with-border ">
        <h3 class="box-title">Thông tin mặt hàng</h3>
    </div>

    <div class="box-body">
        <form class="form-horizontal" action="~/product/save" method="post" enctype="multipart/form-data">
            @Html.HiddenFor(m => m.ProductID)
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", @autofocus = "", @value = $"{Model.ProductName}" })

                    @Html.ValidationMessageFor(m => m.ProductName, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Loại hàng:</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.CategoryID, SelectListHelper.Categories(), new { @class = "form-control" })

                    @*@Html.ValidationMessageFor(m => m.CategoryID, new { @style = "color:#f00" })*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Nhà cung cấp:</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.SupplierID, SelectListHelper.Suppliers(), new { @class = "form-control" })

                    @*@Html.ValidationMessageFor(m => m.SupplierID, new { @style = "color:#f00" })*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Unit, new { @class = "form-control", @value = $"{Model.Unit}", @placeholder = "Nhập đơn vị tính" })

                    @Html.ValidationMessageFor(m => m.Unit, "", new { @style = "color:#f00" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @type = "number", @min = "0", @value = $"{Model.Price}", @onclick = "this.select()" })

                    @*@Html.ValidationMessageFor(m => m.Price, new { @style = "color:#f00" })*@
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="Photo" value="@Model.Photo" />
                    <img id="Photo" src="~/Images/Products/@Model.Photo" class="img img-bordered" style="width:150px" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/product">
                        <i class="fa fa-ban"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
    <div class="box-footer text-center">
    </div>
</div>

<div class="box box-info">
    <div class="box-header with-border ">
        <h3 class="box-title">Thư viện ảnh</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-gray">
                    <th>Ảnh</th>
                    <th>Mô tả/tiêu đề</th>
                    <th>Thứ tự hiển thị</th>
                    <th>Ẩn ảnh</th>
                    <th class="text-right">
                        <a class="btn btn-xs btn-primary" href="~/product/photo/add">
                            <i class="fa fa-plus"></i>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (listPhoto.Count == 0)
                {
                    <p class="text-center" style="font-size:20px; font:bold">Kho ảnh hiện trống</p>
                }
                @foreach (var photo in listPhoto)
                {
                    <tr>
                        <td style="vertical-align:middle">
                            <img src="@photo.Photo" alt="" style="width:100px" />
                        </td>
                        <td style="vertical-align:middle;">
                            @photo.Description
                        </td>
                        <td style="vertical-align:middle;">@photo.DisplayOrder</td>
                        <td style="vertical-align:middle;">
                            <input type="checkbox" value="@photo.IsHidden" disabled />
                        </td>
                        <td style="vertical-align:middle; text-align:right">
                            <a class="btn btn-xs btn-primary" href="~/product/photo/edit/@Model.ProductID/@photo.PhotoID">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a class="btn btn-xs btn-danger" href="~/product/photo/delete/@Model.ProductID/@photo.PhotoID">
                                <i class="fa fa-trash-o"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="box-footer text-center">
    </div>

</div>

<div class="box box-success">
    <div class="box-header with-border ">
        <h3 class="box-title">Thuộc tính của mặt hàng</h3>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse">
                <i class="fa fa-minus"></i>
            </button>
        </div>
    </div>

    <div class="box-body">
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="bg-gray">
                    <th>Tên thuộc tính</th>
                    <th>Giá trị thuộc tính</th>
                    <th>Thứ tự hiển thị</th>
                    <th class="text-right">
                        <a class="btn btn-xs btn-primary" href="~/product/attribute/add/111">
                            <i class="fa fa-plus"></i>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="vertical-align:middle">CPU</td>
                    <td style="vertical-align:middle;">Intel Core i5 3337U 1.8GHz</td>
                    <td style="vertical-align:middle;">1</td>
                    <td style="vertical-align:middle; text-align:right">
                        <a class="btn btn-xs btn-primary" href="~/product/attribute/edit/111/222">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a class="btn btn-xs btn-danger" href="~/product/attribute/delete/111/222">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>
                </tr>
                <tr>
                    <td style="vertical-align:middle">DISPLAY</td>
                    <td style="vertical-align:middle;">15.6" Led 1600*900</td>
                    <td style="vertical-align:middle;">2</td>
                    <td style="vertical-align:middle; text-align:right">
                        <a class="btn btn-xs btn-primary" href="~/product/edit-attribute/123">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a class="btn btn-xs btn-danger" href="~/product/delete-attribute/123">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="box-footer text-center">
    </div>

</div>
