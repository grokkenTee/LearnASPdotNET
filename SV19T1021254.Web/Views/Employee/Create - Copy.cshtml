@model SV19T1021254.DomainModel.Employee
@{

}
<div class="container-fluid">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">&nbsp;</h3>
        </div>

        <form class="form-horizontal" action="~/employee/save" method="post" enctype="multipart/form-data">
            <div class="box-body">
                @Html.HiddenFor(m => m.EmployeeID)

                <div class="form-group">
                    <label class="control-label col-sm-2">Họ</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @autofocus = "autofocus" })

                        @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:#f00" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Tên</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })

                        @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:#f00" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Ngày sinh</label>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(m => m.BirthDate, new { @class = "form-control" })
                        <input type="date" class="form-control datepicker" name="birthDateString" value="@string.Format("0:dd/MM/yyyy",Model.BirthDate)">
                        @Html.ValidationMessageFor(m => m.BirthDate, "", new { @style = "color:#f00" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Email</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

                        @Html.ValidationMessageFor(m => m.Email, "", new { @style = "color:#f00" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Chọn ảnh</label>
                    <div class="col-sm-10">
                        <input type="file" class="form-control" id="photo" name="uploadPhoto" />

                    </div>
                </div>

                <div class="form-group">
                    
                    <div class="col-sm-10">
                        <input type="file" class="form-control" id="photo" name="Photo" />

                    </div>
                </div>
                @Html.HiddenFor(m => m.Photo)
                <div class="form-group">
                    <label class="control-label col-sm-2">Mô tả</label>
                    <div class="col-sm-10">
                        @Html.TextAreaFor(m => m.LastName, new { @class = "form-control" })

                        @Html.ValidationMessageFor(m => m.LastName, "", new { @style = "color:#f00" })
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i>Lưu dữ liệu
                        </button>
                        <a href="~/employee" class="btn btn-warning">
                            <i class="fa fa-ban"></i>Hoàn tác
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

