@model SV19T1021254.DomainModel.Shipper
@{

}

<div class="container-fluid">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">&nbsp;</h3>
        </div>

        <form class="form-horizontal" action="~/shipper/save">
            <div class="box-body">
                @Html.HiddenFor(m=>m.ShipperID)

                <div class="form-group">
                    <label class="control-label col-sm-2">Tên Người giao hàng</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m=>m.ShipperName, new {@class="form-control", @autofocus="autofocus"})
                        @Html.ValidationMessageFor(m=>m.ShipperName, "", new {@class="color:#f00"})
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Số điện thoại</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "color:#f00" })
                    </div>
                </div>
            </div>

            <div class="box-footer">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i>Lưu dữ liệu
                        </button>
                        <a href="~/customer" class="btn btn-warning">
                            <i class="fa fa-ban"></i>Hoàn tác
                        </a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

