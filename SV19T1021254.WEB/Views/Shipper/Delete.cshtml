@model SV19T1021254.DomainModel.Shipper
@{
    ViewBag.Title = "Xoá người giao hàng";
}

<div class="container-fluid">

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">&nbsp;</h3>
        </div>
        <form class="form-horizontal" action="~/shipper/delete/@Model.ShipperID" method="POST">
            <div class="box-body">
                @Html.HiddenFor(m => m.ShipperID)
                <div class="form-group" style="border-bottom: dotted 1px #808080">
                    <label class="control-label col-sm-2">Tên người giao hàng</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.ShipperName</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Số điện thoại</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">@Model.Phone</p>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-remove"></i>Đồng ý xoá
                        </button>
                        <a href="~/shipper" class="btn btn-default">
                            <i class="fa fa-ban"></i>Hoàn tác
                        </a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

