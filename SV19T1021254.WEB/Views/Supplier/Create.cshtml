@model SV19T1021254.DomainModel.Supplier
@{
    
}

<div class="container-fluid">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">&nbsp;</h3>
        </div>

        <form class="form-horizontal" action="~/supplier/save">
            <div class="box-body">
                @Html.HiddenFor(m => m.SupplierID)

                <div class="form-group">
                    <label class="control-label col-sm-2">Tên nhà cung cấp</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", @autofocus = "autofocus" })

                        @Html.ValidationMessageFor(m => m.SupplierName, "", new { @style = "color:#f00" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Tên giao dịch</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control"})

                        @Html.ValidationMessageFor(m => m.ContactName, "", new { @style = "color:#f00" })
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="control-label col-sm-2">Số điện thoại</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })

                        @Html.ValidationMessageFor(m => m.Phone, "", new { @style = "color:#f00" })
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="control-label col-sm-2">Địa chỉ</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })

                        @Html.ValidationMessageFor(m => m.Address, "", new { @style = "color:#f00" })
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="control-label col-sm-2">Quốc gia</label>
                    <div class="col-sm-10">
                        @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new { @class = "form-control" })

                        @Html.ValidationMessageFor(m => m.Country, "", new { @style = "color:#f00" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Thành phố</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Mã bưu chính</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })

                    </div>
                </div>
            </div>

            <div class="box-footer">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i>Lưu dữ liệu
                        </button>
                        <a href="~/customer" class="btn btn-warning">
                            <i class="fa fa-ban"></i> Hoàn tác
                        </a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

