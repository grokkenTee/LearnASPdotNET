@model SV19T1021254.DomainModel.Category
@{

}

<div class="container-fluid">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">&nbsp;</h3>
        </div>

        <form class="form-horizontal" action="~/category/save" method="post">
            <div class="box-body">

                <div class="form-group">
                    @Html.HiddenFor(m => m.CategoryId)

                    <label class="control-label col-sm-2">Tên loại hàng</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m=>m.CategoryName, new {@class="form-control", @autofocus="", @placeholder = "Nhập tên loại hàng" })

                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Mô tả</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder = "Nhập mô tả cho loại hàng" })
                        
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="control-label col-sm-2">Danh mục cha</label>
                    <select ></select>
                </div>
            </div>

            <div class="box-footer">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i>Lưu dữ liệu
                        </button>
                        <a href="~/category" class="btn btn-warning">
                            <i class="fa fa-ban"></i>Hoàn tác
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

