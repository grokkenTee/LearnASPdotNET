
@{
    ViewBag.Title = "Xoá loại hàng";
}

<div class="container-fluid">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">&nbsp;</h3>
        </div>
        <form class="form-horizontal" action="~/category/delete" method="POST">
            <div class="box-body">
                <div class="form-group" style="border-bottom: dotted 1px #808080">
                    <label class="control-label col-sm-2">Tên danh mục</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">Beverages</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Mô tả</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">Soft drinks, coffees, teas, beers, and ales</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Danh mục cha</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">Drinks</p>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-remove"></i>Đồng ý xoá
                        </button>
                        <a href="~/category" class="btn btn-default">
                            <i class="fa fa-ban"></i>Hoàn tác
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

