@model SV19T1021254.Web.Models.EmployeePaginationResult
@{
    ViewBag.Title = "Nhân viên";
}

<form action="~/employee" method="get" class="sidebar-form">
    <div class="input-group">
        <input type="text" name="searchValue" class="form-control" placeholder="Tìm theo tên hoặc email">
        <span class="input-group-btn">
            <button type="submit" id="search-btn" class="btn btn-flat">
                <i class="fa fa-search"></i>
            </button>
            <a href="~/employee/create" class="btn btn-flat btn-default" style="margin-left:5px">
                Bổ sung
            </a>
        </span>
    </div>
</form>
<p>
    Có tổng cộng <b>@Model.RowCount</b> trong tổng số <b>@Model.PageCount</b> trang.
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <td style="width:70px">STT</td>
                <th class="col-sm-1">Tên nhân viên</th>
                <th class="col-sm-2">Email</th>
                <th style="width:100px">Ngày sinh</th>
                <th>Ảnh</th>
                <th class="text-center">Mô tả</th>
                <th style="width:80px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Data)
            {
            <tr>
                <td>@item.EmployeeID</td>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Email</td>
                <td>@item.BirthDate</td>
                <td><img src="@item.Photo" width="80px"/></td>
                <td>@item.Notes</td>
                
                <td class="text-center">
                    <a href="~/employee/edit/@item.EmployeeID" class="btn-xs btn-success" style="margin:1px">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="~/employee/delete/@item.EmployeeID" class="btn-xs btn-warning" style="margin:1px">
                        <i class="fa fa-remove"></i>
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <ul class="pagination">
        <li><a href="#"><i class="fa fa-backward"></i></a></li>
        @for (var i = 1; i <= Model.PageCount; ++i)
        {
            if (i == Model.Page)
            {
                <li class="active">
                    <a>@i</a>
                </li>
            }
            else
            {
                <li><a href="~/customer?page=@i&searchValue=@Model.SearchValue">@i</a></li>
            }
        }
        <li><a href="#"><i class="fa fa-forward"></i></a></li>
    </ul>
</div>
