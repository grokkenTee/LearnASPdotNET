@model IEnumerable<SV19T1021254.DomainModel.Customer>
@{
    ViewBag.Title = "Khách hàng";
}

<form action="~/customer" method="get" class="sidebar-form">
    <div class="input-group">
        <input type="text" name="searchValue" class="form-control" placeholder="Tìm...">
        <span class="input-group-btn">
            <button type="submit" id="search-btn" class="btn btn-flat">
                <i class="fa fa-search"></i>
            </button>
            <a href="~/employee/create" class="btn btn-flat btn-default" style="margin-left:5px">
                Bổ sung
            </a>
        </span>
    </div>
</form>
<p>
    Có tổng cộng <b>@ViewBag.RowCount</b> trong tổng số <b>@ViewBag.PageCount</b> trang.
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <td style="width: 70px">STT</td>
                <th>Tên khách hàng</th>
                <th>Tên giao dịch</th>
                <th>Địa chỉ</th>
                <th>Quốc gia</th>
                <th>Thành phố</th>
                <th>Mã bưu chính</th>
                <th style="width:80px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CustomerID</td>
                    <td>@item.CustomerName</td>
                    <td>@item.ContactName</td>
                    <td>@item.Address</td>
                    <td>@item.Country</td>
                    <td>@item.City</td>
                    <td>@item.PostalCode</td>
                    <td class="text-center">
                        <a href="~/employee/edit/@item.CustomerID" class="btn-xs btn-success" style="margin:1px">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/employee/delete/@item.CustomerID" class="btn-xs btn-warning" style="margin:1px">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <ul class="pagination">
        <li><a href="#"><i class="fa fa-backward"></i></a></li>
        @for (var i = 1; i <= ViewBag.PageCount; ++i)
        {
            if (i == ViewBag.CurrentPage)
            {
                <li class="active">
                    <a>@i</a>
                </li>
            }
            else
            {
                <li><a href="~/customer?page=@i&searchValue=@ViewBag.SearchValue">@i</a></li>
            }
        }
        <li><a href="#"><i class="fa fa-forward"></i></a></li>
    </ul>
</div>
