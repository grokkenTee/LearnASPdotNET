@model SV19T1021254.DomainModel.Customer
@{

}
<div class="container-fluid">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">&nbsp;</h3>
        </div>
        <form class="form-horizontal" action="~/customer/save" method="post">
            <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
            <div class="box-body">
                <div class="form-group">
                    <label class="control-label col-sm-2">Tên khách hàng</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="customerName" placeholder="Nhập tên khách hàng" name="CustomerName" autofocus value="@Model.CustomerName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Tên giao dịch</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="contactName" placeholder="Nhập tên giao dịch" name="ContactName" value="@Model.ContactName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Địa chỉ</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="address" placeholder="Nhập địa chỉ" name="Address" value="@Model.Address">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Quốc gia</label>
                    <div class="col-sm-10">
                        <select class="form-control" id="country" name="Country">
                            @foreach (var c in SV19T1021254.BussinessLayer.CommonDataService.ListOfCountries())
                            {
                                if (c.CountryName == Model.Country)
                                {
                                    <option value="@c.CountryName" selected>@c.CountryName</option>
                                }
                                else
                                {
                                    <option value="@c.CountryName">@c.CountryName</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Thành phố</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="city" placeholder="Nhập thành phố" name="City" value="@Model.City">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Mã bưu chính</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="postalCode" placeholder="Nhập địa chỉ" name="PostalCode" value="@Model.PostalCode">
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i>Lưu dữ liệu
                        </button>
                        <a href="~/customer" class="btn btn-warning">
                            <i class="fa fa-ban"></i>Hoàn tác
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>