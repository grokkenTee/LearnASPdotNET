
@{
    ViewBag.Title = "Xoá khách hàng";
}

<div class="container-fluid">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">&nbsp;</h3>
        </div>
        <form class="form-horizontal" action="~/customer/delete" method="POST">
            <div class="box-body">
                <div class="form-group" style="border-bottom: dotted 1px #808080">
                    <label class="control-label col-sm-2">Tên khách hàng</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">Trần Nguyên Phong</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Tên giao dịch</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">Tiền</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Địa chỉ</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">77 Nguyễn Huệ</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Quốc gia</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">Việt Nam</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Thành phố</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">Huế</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">Mã bưu chính</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">5000</p>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-remove"></i>Đồng ý xoá
                        </button>
                        <a href="~/customer" class="btn btn-default">
                            <i class="fa fa-ban"></i>Hoàn tác
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

